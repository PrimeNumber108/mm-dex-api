{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "src/*": ["src/*"],
      "@libs/*": ["libs/*"],
      "@services/*": ["services/*"]

    },
    "typeRoots": ["node_modules/@types", "types"]

   
  },
  "include": ["src/**/*.ts", "src/**/*.json"], // Include JSON files
  "exclude": ["node_modules", "dist"]


}
